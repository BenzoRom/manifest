<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Remotes -->
  <remote  name="benzo"
           fetch="https://github.com/BenzoRom/"
           revision="android12"/>

  <remote  name="github"
           fetch="https://github.com/"/>

  <remote  name="bitbucket"
           fetch="https://bitbucket.org/" />

  <!-- AOSP repos to remove -->
  <include name="remove.xml" />

  <!-- Build -->
  <project path="build/make" name="build" remote="benzo" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="build_soong" remote="benzo" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- System -->
  <project path="art" name="art" remote="benzo" />
  <project path="bionic" name="bionic" remote="benzo" />
  <project path="external/bash" name="external_bash" remote="benzo" />
  <project path="external/harfbuzz_ng" name="external_harfbuzz_ng" remote="benzo" />
  <project path="external/libncurses" name="external_libncurses" remote="benzo" />
  <project path="frameworks/av" name="frameworks_av" remote="benzo" />
  <project path="frameworks/base" name="frameworks_base" remote="benzo" />
  <project path="frameworks/native" name="frameworks_native" remote="benzo" />
  <project path="packages/apps/BenzoSettings" name="packages_apps_BenzoSettings" remote="benzo" />
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="benzo" />
  <project path="packages/providers/DownloadProvider" name="packages_providers_DownloadProvider" remote="benzo" />
  <project path="system/core" name="system_core" remote="benzo" />
  <project path="system/extras" name="system_extras" remote="benzo" />
  <project path="system/logging" name="system_logging" remote="benzo" />
  <project path="system/security" name="system_security" remote="benzo" />

  <!-- Device and Kernel -->
  <project path="device/google/gs101" name="device_google_gs101" remote="benzo" />
  <project path="device/google/raviole" name="device_google_raviole" remote="benzo" />

  <!-- Prebuilts -->
  <project path="prebuilts/build-tools" name="prebuilts_build-tools" remote="benzo" />
  <project path="prebuilts/clang/host/linux-x86" name="prebuilts_clang_host_linux-x86" remote="benzo" />
  <project path="prebuilts/clang/host/linux-x86/clang-benzo" name="xanaxdroid/benzoClang-14.0" remote="bitbucket" revision="master" />
  <project path="prebuilts/clang-tools" name="xanaxdroid/prebuilts_clang-tools" remote="bitbucket" revision="android12" />
  <project path="prebuilts/gas/linux-x86" name="platform/prebuilts/gas/linux-x86" revision="master" clone-depth="1" />
  <project path="prebuilts/rust" name="platform/prebuilts/rust" revision="c02cf63008969d093744d434576612ba1a9b83d3" clone-depth="1" />

  <!-- Vendors -->
  <project path="vendor/benzo" name="vendor_benzo" remote="benzo" />
  <project path="vendor/google_devices/oriole" name="vendor_google_devices_oriole" sync-s="true" remote="benzo" />
  <project path="vendor/googleapps" name="xanaxdroid/vendor_googleapps" remote="bitbucket" revision="android12" />

</manifest>
